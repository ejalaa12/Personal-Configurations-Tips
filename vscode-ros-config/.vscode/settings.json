{
	"files.associations": {
		"*.repos": "yaml",
		"*.world": "xml",
		"*.xacro": "xml",
		"*.urdf": "xml",
		"*.sdf": "xml",
	},
	// autocomplete from python packages
	"python.autoComplete.extraPaths": [
		"/opt/ros/humble/lib/python3.8/site-packages"
	],
	"python.analysis.extraPaths": [
		"/opt/ros/humble/lib/python3.8/site-packages"
	],
	// environment file to let vscode find python files withing workspace
	"python.envFile": "${workspaceFolder}/.env",
	"C_Cpp.default.intelliSenseMode": "clang-x64",
	"C_Cpp.formatting": "Disabled",
	"[cpp]": {
	    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
		"editor.tabSize": 2
	},
	"search.exclude": {
	    "**/node_modules": true,
	    "**/bower_components": true,
	    "**/*.code-search": true,
	    "**/build": true,
	    "**/install": true,
	    "**/log": true
	},
	"cSpell.words": [
		"alaa",
		"Alaa",
		"athackst",
		"autopep",
		"cmake",
		"cppcheck",
		"cpplint",
		"DCMAKE",
		"deque",
		"devcontainer",
		"forssea",
		"gzerr",
		"ints",
		"jawad",
		"moveit",
		"noqa",
		"Octomap",
		"ompl",
		"pytest",
		"rclcpp",
		"rclpy",
		"repos",
		"rosdep",
		"rosdistro",
		"rosidl",
		"RTPS",
		"srdf",
		"uncrustify",
		"urdf",
		"Wextra",
		"Wpedantic",
		"xacro",
		"xmllint"
	],
	"cSpell.allowCompoundWords": true,
	"cSpell.ignorePaths": [
	    "**/package-lock.json",
	    "**/node_modules/**",
	    "**/vscode-extension/**",
	    "**/.git/objects/**",
	    ".vscode",
	    ".vscode-insiders",
	    ".devcontainer/devcontainer.json"
	],
	"workbench.tree.indent": 12,
	"editor.mouseWheelZoom": true,
	"esbonio.sphinx.confDir": "",
	"editor.mouseWheelZoom": false,
}